<h1>Listing tags</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.name %></td>

    <td><%= link_to 'Show', tag%></td>
    <td><%= link_to 'Edit', edit_tag_path(tag), :class => "icon icon-pencil"%></td>
    <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }, :class => "icon icon-trash" %></td>
    
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tag', new_tag_path, :class=>"btn btn-primary pull-right" %>
