<%if signed_in?%>
<h1>Listing Screenshots</h1>
<%= link_to 'New Screenshot', new_project_screenshot_path, :class => "btn btn-primary pull-right" %>
<table>
  <tr>
    <th>Project</th>
    <th>Url</th>
    <th>Caption</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @project_screenshots.each do |project_screenshot| %>
  <tr>
    <td><%= project_screenshot.project_id %></td>
    <td><img src="<%= project_screenshot.url %>" /></td>
    <td><%= project_screenshot.caption %></td>
    <td><%= link_to 'Show', project_screenshot %></td>
    <td><%= link_to 'Edit', edit_project_screenshot_path(project_screenshot), :class => "icon icon-pencil"%></td>
      <td><%= link_to 'Destroy', project_screenshot, method: :delete, data: { confirm: 'Are you sure?' }, :class => "icon icon-trash" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Screenshot', new_project_screenshot_path, :class => "btn btn-primary pull-right" %>
<%end%>
